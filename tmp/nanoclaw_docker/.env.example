# NanoClaw 环境变量配置示例
# 复制此文件为 .env 并填入实际的值

# Anthropic API 密钥 (必需)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# WhatsApp 手机号码 (格式: +8613800138000)
WHATSAPP_PHONE_NUMBER=+8613800138000

# 数据目录
NANCLAW_DATA_DIR=/app/data

# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# 时区
TZ=Asia/Shanghai

# Anthropic 模型配置 (可选)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# 数据库配置
DB_PATH=/app/data/nanoclaw.db

# 会话管理
SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# 定时任务配置
ENABLE_SCHEDULER=true
SCHEDULER_CHECK_INTERVAL=60

# 安全配置
ENABLE_MOUNT_SECURITY=true
READ_ONLY_MODE=false

# 日志配置
LOG_FILE=/app/logs/nanoclaw.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
