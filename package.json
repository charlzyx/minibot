{
  "name": "minibot",
  "version": "2.1.0",
  "description": "Minibot - Lightweight AI assistant with Hono + TypeScript",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "minibot": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "build:cli": "tsc && tsc-alias",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "docs:dev": "vocs dev docs",
    "docs:build": "vocs build docs",
    "docs:preview": "vocs preview docs",
    "container:build": "./scripts/build-claude-container.sh",
    "container:build:all": "./scripts/build-container.sh",
    "lint": "echo \"Linting not configured yet\"",
    "format": "echo \"Formatting not configured yet\""
  },
  "keywords": [
    "bot",
    "ai",
    "agent",
    "openai",
    "anthropic",
    "llm",
    "assistant"
  ],
  "author": "charlzyx",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.2",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.2.2",
    "@larksuiteoapi/node-sdk": "^1.59.0",
    "better-sqlite3": "12.6.2",
    "c12": "^4.0.0-beta.3",
    "citty": "^0.2.1",
    "consola": "^3.4.2",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.3.1",
    "hono": "^4.4.3",
    "js-yaml": "^4.1.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.1.50",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0",
    "vocs": "^1.0.16"
  }
}
